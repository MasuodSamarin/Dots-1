#==============[ Functions ]====================
em() {
    ebook-meta "$1" | head  -n 5
}

ebookmgr() {
    table=$1
    url=$2
    python ~/Workspace/Projects/Ebook_Manager/Ebook_Manager.py "$1" "$2"
}

#=============[ Prompt ]================

# =====[Background Colors]====={{{
none=$(tput setab 0)
red=$(tput setab 1)
green=$(tput setab 2)
yellow=$(tput setab 3)
blue=$(tput setab 4)
pink=$(tput setab 5)
cyan=$(tput setab 6)
white=$(tput setab 15)
black=$(tput setab 0)
purple=$(tput setab 93)
ind_red=$(tput setab 203)
# +-+-+-+-+-+-+-+-+-++-+-++-+-+
#}}}

# ========[Foreground Colors]======{{{
NONE=$(tput setaf 0)
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
BLUE=$(tput setaf 4)
PINK=$(tput setaf 5)
CYAN=$(tput setaf 6)
WHITE=$(tput setaf 7)
BLACK=$(tput setaf 16)
PURPLE=$(tput setaf 93)
GREY=$(tput setaf 246)
FLR=$(tput setaf 166)
IND_RED=$(tput setaf 203)
IND_GREEN=$(tput setaf 34)
# +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}}}

# ========[ Modifiers Codes ]========={{{
BOLD=$(tput bold)
DIM=$(tput dim)
BLINK=$(tput blink)
RESET=$(tput sgr0)
# +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}}}

# +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-

DIR_ICON="   "
ARCH_ICON="  "
SEP=""
FLAME1="  "
FLAME2=" "
ARR=""
CLOCK_ICON=""
HAND_ARROW=" "
SEQ="\[${BOLD}${IND_RED}${ARR}${WHITE}${ARR}${IND_GREEN}${ARR}\]"

# DIR_PART="\[$black$BOLD$PURPLE\]$DIR_ICON \w $FLAME1\[$RESET\]"
DIRECTORY="\[${BOLD}${RED}${white}\]${DIR_ICON}\w \[${RESET}${WHITE}${red}\]"
TIME="\[${BOLD}${WHITE}${red}\]${CLOCK_ICON} \$(date +%H:%M:%S) \[$RESET${RED}\]"
NORMAL_USER="\[${RESET}${BOLD}${BLACK}${cyan}\]${ARCH_ICON} \u \[${RESET}${CYAN}\]\[$RESET\]"

TIME="\[${BOLD}${IND_RED}\]${HAND_ARROW} \[${BOLD}${GREY}\]\$(date +%H:%M:%S)"
DIRECTORY="\[${BOLD}${PINK}\]${DIR_ICON}\w "
DARK_THEMED_USER="\[${RESET}${BOLD}${YELLOW}\] ${FLAME2} \[${CYAN}\]\u\[$RESET\]"

# export PS1="$DIRECTORY $SEQ $TIME\n$NORMAL_USER \[$RESET\]"
export PS1="$DIRECTORY $TIME\n$DARK_THEMED_USER $SEQ \[$RESET\]"
