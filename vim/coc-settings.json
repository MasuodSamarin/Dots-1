{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"h",
				"c",
				"cpp",
				"cxx",
				"c++",
				"C"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	}
}
