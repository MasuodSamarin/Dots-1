# /* vim: set filetype=conf :*/

# Runtime Configuration for Zathura

# [ Girara User-Interface Configuration ]

# Monaco just everywhere
# set font "Monaco for Powerline 12"
set font "Monaco 12"

# Access the Clipboard
set selection-clipboard clipboard

# StatusBar background to be Black
set statusbar-bg "#000000"
# StatusBar foreground to be Green
set statusbar-fg "#00ff00"

# Just don't show me the ScrollBars
set show-scrollbars "true"

# Someone's else
# InputBar === StatusBar
set inputbar-bg "#000000"

# InputBar === StatusBar
set inputbar-fg "#00ff00"

set recolor "true"
set recolor-darkcolor "#ffffff"
set recolor-lightcolor "#000000"
set recolor-reverse-video "true"
set recolor-keephue "true"

# Open document over my entire screen everytime
set adjust-open "width"
